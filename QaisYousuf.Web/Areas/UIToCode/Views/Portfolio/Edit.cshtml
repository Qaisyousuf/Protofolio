@model QaisYousuf.ViewModels.PortfolioViewModel
@{
    Layout = null;
}

<div class="card card-cascade narrower mb-1 z-depth-0" style="margin-top: 28px">

    <!--Card image-->
    <div class="view view-cascade pt-0">
        <div class=" card-header light-blue lighten-1 white-text text-uppercase font-weight-bold text-center py-3">
            Do you want to Update the <span class="text-warning">@Model.Title</span>  Record?

        </div>

    </div>
    <!--/.Card image-->
    <!--Card content-->
    <div class="card-body card-body-cascade d-flex justify-content-center mt-n2">
        @using (Html.BeginForm("Edit", "Portfolio", FormMethod.Post, new { onsubmit = "return SubmitFormEdit(this)" }))
        {

            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Slug, new { @class = "control-label" })
                @Html.EditorFor(model => model.Slug, new { htmlAttributes = new { @class = "form-control" } })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MetaKeywords, new { @class = "control-label" })
                @Html.EditorFor(model => model.MetaKeywords, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MetaKeywords, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MetaDescription, new { @class = "control-label" })
                @Html.EditorFor(model => model.MetaDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })
            </div>

            <div class="form-group  ">
                <div class="checkbox">
                    <label>@Html.CheckBoxFor(model => model.IsVisibleToSearchEngine, new { style = "opacity: 1" })&nbsp;  &nbsp; @Html.DisplayNameFor(model => model.IsVisibleToSearchEngine)</label>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BannerId, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(m => m.BannerId, new SelectList(ViewBag.Banner, "Id", "Title"), "-----Select the banner------", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BannerId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PortfolioAboutId, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(m => m.PortfolioAboutId, new SelectList(ViewBag.About, "Id", "MainTitle"), "-----Select about section------", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PortfolioAboutId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.WorkExperienceId, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(m => m.WorkExperienceId, new SelectList(ViewBag.WorkExperience, "Id", "Maintitle"), "-----Select Work Experience------", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.WorkExperienceId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EducationId, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(m => m.EducationId, new SelectList(ViewBag.Education, "Id", "MainTitle"), "-----Select Education section ------", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EducationId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.OnlineCertificationId, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(m => m.OnlineCertificationId, new SelectList(ViewBag.OnlineCertification, "Id", "MainTitle"), "-----Select Online Certification------", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OnlineCertificationId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PortfolioProjectId, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(m => m.PortfolioProjectId, new SelectList(ViewBag.Project, "Id", "MainTitle"), "-----Select Project section ------", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PortfolioProjectId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.InterestId, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownListFor(m => m.InterestId, new SelectList(ViewBag.Insterest, "Id", "MainTitle"), "-----Select Interest section ------", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.InterestId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary"><i class="fas fa-save pr-2"></i> Save</button>  |
                <button type="reset" value="Reset" class="btn btn-mdb-color"><i class="fas fa-redo-alt"></i> Reset</button>
            </div>

        }



    </div>
    <!--/.Card content-->

</div>
