@model QaisYousuf.ViewModels.DesignStepsViewModel
@{
    Layout = null;
}
<div class="card card-cascade narrower mb-1 z-depth-0" style="margin-top: 28px">

    <!--Card image-->
    <div class="view view-cascade pt-0">
        <div class=" card-header light-blue lighten-1 white-text text-uppercase font-weight-bold text-center py-3">
            Do you want to Update the <span class="text-warning">@Model.StepTitle</span>  Record?

        </div>

    </div>
    <!--/.Card image-->
    <!--Card content-->
    <div class="card-body card-body-cascade d-flex justify-content-center mt-n2">
        @using (Html.BeginForm("Edit", "DesignSteps", FormMethod.Post, new { onsubmit = "return SubmitFormEdit(this)" }))
        {
            @Html.HiddenFor(model => model.Id)
            <div class="form-group ">
                @Html.LabelFor(model => model.MainTitle, new { @class = "control-label" })
                @Html.EditorFor(model => model.MainTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MainTitle, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SubTitle, new { @class = "control-label" })
                @Html.EditorFor(model => model.SubTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SubTitle, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StepIcon, new { @class = "control-label" })
                @Html.TextAreaFor(model => model.StepIcon, new { @class = "form-control", rows = "10", cols = "30" })
                @Html.ValidationMessageFor(model => model.StepIcon, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StepTitle, new { @class = "control-label" })
                @Html.EditorFor(model => model.StepTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StepTitle, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StepImageUrl, new { @class = "control-label" })
                @Html.EditorFor(model => model.StepImageUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StepImageUrl, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StepContent, new { @class = "control-label" })
                @Html.TextAreaFor(model => model.StepContent, new { @class = "form-control", rows = "10", cols = "30" })
                @Html.ValidationMessageFor(model => model.StepContent, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary"><i class="fas fa-save pr-2"></i> Save</button>  |
                <button type="reset" value="Reset" class="btn btn-mdb-color"><i class="fas fa-redo-alt"></i> Reset</button>
            </div>

        }



    </div>
    <!--/.Card content-->

</div>

