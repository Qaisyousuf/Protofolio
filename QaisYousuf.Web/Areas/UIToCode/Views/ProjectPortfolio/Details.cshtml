@model QaisYousuf.ViewModels.PortfolioProjectViewModel
@{
    Layout = null;
}

<div class="card card-cascade narrower mb-1 z-depth-0" style="margin-top: 28px">

    <!--Card image-->
    <div class="view view-cascade pt-0">
        <div class=" card-header light-blue lighten-1 white-text text-uppercase font-weight-bold text-center py-3">
            Details of <span class="text-warning">@Model.MainTitle</span>  Record
        </div>

    </div>
    <!--/.Card image-->
    <!--Card content-->
    <div class="card-body card-body-cascade d-flex justify-content-center mt-n2">
        @using (Html.BeginForm("Details", "ProjectPortfolio", FormMethod.Get, new { onsubmit = "return SubmitFormDetails(this)" }))
        {
            @Html.HiddenFor(model => model.Id)
            <div class="table-wrapper table-responsive table-bordered table-striped ">
                <!--Table-->
                <table class="table table-hover mb-0 ">
                    <tbody>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-tag"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.MainTitle)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.MainTitle)</td>
                        </tr>

                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="far fa-building"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ProjectName)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.ProjectName)</td>
                        </tr>

                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-project-diagram"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ProjectType)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.ProjectType)</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-external-link-alt"></i> </a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ProjectImageUrl)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.ProjectImageUrl)</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-calendar-check"></i> </a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ProjectPublishDate)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.ProjectPublishDate)</td>
                        </tr>

                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-calendar-check"></i> </a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ProjectDetails)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.ProjectDetails)</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-link"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ProjectWebSiteUrl)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.ProjectWebSiteUrl)</td>
                        </tr>

                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-spell-check"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ButtonText)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.ButtonText)</td>
                        </tr>

                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-thermometer-empty"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ProjectStatusId)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.ProjectStatusId)</td>
                        </tr>
                        <tr class="">
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="far fa-newspaper"></i></a>
                            </th>
                            <td class="font-weight-bold">  @Html.DisplayNameFor(model => model.Content)</td>
                            <td class="collapse" id="collapseExample"> @Html.Raw(Model.Content)</td>
                            <td>
                                <button class="btn btn-info btn-sm" type="button" data-toggle="collapse" data-target="#collapseExample"
                                        aria-expanded="false" aria-controls="collapseExample">
                                    Read more
                                </button>
                            </td>
                        </tr>
                        <tr class="">
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="far fa-newspaper"></i></a>
                            </th>
                            <td class="font-weight-bold">  @Html.DisplayNameFor(model => model.SubContent)</td>
                            <td class="collapse" id="collapseExample1"> @Html.Raw(Model.SubContent)</td>
                            <td>
                                <button class="btn btn-info btn-sm" type="button" data-toggle="collapse" data-target="#collapseExample1"
                                        aria-expanded="false" aria-controls="collapseExample">
                                    Read more
                                </button>
                            </td>
                        </tr>

                    </tbody>
                    <!--Table body-->
                </table>
                <!--Table-->
            </div>

        }




    </div>
    <!--/.Card content-->

</div>

