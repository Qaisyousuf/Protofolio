                @Html.LabelFor(model => model.WorkingData, new { @class = "control-label" })
                @Html.EditorFor(model => model.WorkingData, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WorkingData, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary"><i class="fas fa-save pr-2"></i> Save</button>  |
                <button type="reset" value="Reset" class="btn btn-mdb-color"><i class="fas fa-redo-alt"></i> Reset</button>

            </div>
        }



    </div>
    <!--/.Card content-->

</div>

