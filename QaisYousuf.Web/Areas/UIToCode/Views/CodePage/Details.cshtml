@model QaisYousuf.ViewModels.CodePageViewModel
@{
    Layout = null;
}

<div class="card card-cascade narrower mb-1 z-depth-0" style="margin-top: 28px">

    <!--Card image-->
    <div class="view view-cascade pt-0">
        <div class=" card-header light-blue lighten-1 white-text text-uppercase font-weight-bold text-center py-3">
            Details of <span class="text-warning">@Model.Title</span>  Record
        </div>

    </div>
    <!--/.Card image-->
    <!--Card content-->
    <div class="card-body card-body-cascade d-flex justify-content-center mt-n2">
        @using (Html.BeginForm("Details", "CodePage", FormMethod.Get, new { onsubmit = "return SubmitFormDetails(this)" }))
        {
            @Html.HiddenFor(model => model.Id)
            <div class="table-wrapper table-responsive table-bordered table-striped ">
                <!--Table-->
                <table class="table table-hover mb-0 ">
                    <tbody>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-tag"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Title)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.Title)</td>
                        </tr>

                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-sort-alpha-up"></i> </a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Slug)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.Slug)</td>
                        </tr>

                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-sort-alpha-up"></i> </a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.MetaKeywords)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.MetaKeywords)</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-sort-alpha-up"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.MetaDescription)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.MetaDescription)</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-tags"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.IsVisibleToSearchEngine)</td>
                            <td class="text-primary">@Html.CheckBoxFor(model => model.IsVisibleToSearchEngine, new { style = "opacity: 1" }) </td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-clipboard-list"></i> </a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.BannerId)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.BannerId)</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-clipboard-list"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ProgrammingId)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.ProgrammingId)</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-clipboard-list"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.UI_UX_Id)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.UI_UX_Id)</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-clipboard-list"></i> </a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.DesignCodeId)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.DesignCodeId)</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <a class="btn-floating btn-sm btn-primary"><i class="fas fa-clipboard-list"></i></a>
                            </th>
                            <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.SubscriptionId)</td>
                            <td class="text-primary"> @Html.DisplayFor(model => model.SubscriptionId)</td>
                        </tr>



                    </tbody>
                    <!--Table body-->
                </table>
                <!--Table-->
            </div>

        }




    </div>
    <!--/.Card content-->

</div>
