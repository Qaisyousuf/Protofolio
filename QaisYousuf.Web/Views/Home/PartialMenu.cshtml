@model List<QaisYousuf.Models.Menu>

<ul class="nav navbar-nav  nav-pills" id="MyNav">
    @foreach (var menu in Model)
    {
        if (menu.ParentId == null)
        {
            var subMenu = Model.Where(x => x.ParentId == menu.Id).ToList();

            if (subMenu != null && subMenu.Count > 0)
            {
                <li class="dropdown">
                    <a title="@menu.Description" href="#" class="dropdown-toggle" data-toggle="dropdown">@menu.Title  <b class="caret"></b></a>

                    <ul class="dropdown-menu">
                        @foreach (var e in subMenu)
                        {
                            <li><a title="@e.Description" href="@e.Url">@e.Title</a></li>
                        }
                    </ul>
                </li>
            }
            else
            {
                <li class="nav-item"><a class="nav-link" title="@menu.Description" href="@menu.Url">@menu.Title</a></li>
            }
        }
    }
</ul>

