@model QaisYousuf.ViewModels.ListOfPlatfomeDesignViewModel

@if (Model.ListPlatformDesignViewModel !=null)
{

    foreach(var item in Model.ListPlatformDesignViewModel.Take(1))
    {
        <div class="container mt-3 px-5 pt-3 mb-5">
            <section class="text-center">
               
                <!-- Section heading -->
                <h3 class="font-weight-bold light-blue-text">@item.MainTitle</h3>
                
            </section>
        </div>
    }

    
    <div class="container pt-5  pb-0 z-depth-0">


        <!--Section: Content-->
        <section class="text-center dark-grey-text">

           
            
            <div class="row text-center d-flex justify-content-center">
                @foreach (var item in Model.ListPlatformDesignViewModel)
                {
                <div class="col-lg-4 col-md-12   mb-2 pb-2">
                    <div class="view card-img-100 mx-auto mb-2 pb-2 ">

                        <img src="@item.ImageUrl" class="img-fluid" alt="smaple image">
                    </div>
                    <h5 class="font-weight-normal mb-3">@item.SubTitle</h5>
                    <p class="text-muted px-2 mb-lg-0">
                        @Html.Raw(item.Content)
                    </p>
                    <div class="view card-img  pt-2 mt-4 px-4">
                        <div class="ProfileBackImage avatar mx-1 my-0 mt-md-4">
                            <div class="img-fluid">
                                <lottie-player src=https://assets10.lottiefiles.com/packages/lf20_otnlitj8.json background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>


                            <div class="profileImageForBackground">
                                <img src="@item.ImageContent" class="img-fluid" alt="Sample Image" />
                            </div>

                        </div>
                       

                    </div>
                   
                    
                 

                </div>
                }



            </div>
            




        </section>
        <!--Section: Content-->


    </div>

}


@section HomeCustomCSS
    {
    @Styles.Render("~/Content/HomeCustomCSS.css")
}