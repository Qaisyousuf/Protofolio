@model QaisYousuf.ViewModels.ListUIUX
@{
    /**/

    ViewBag.Title = "UIUX";
    Layout = "~/Views/Shared/_UIUX.cshtml";
}


@if (Model?.ListUIUXBannerViewModel != null)
{
    <div class="UIUXBackground">

        @foreach (var item in Model.ListUIUXBannerViewModel.Take(1))
        {
            <div class="bg-transparent">
                <!-- Mask & flexbox options-->
                <div class="mask">
                    <!-- Content -->
                    <div class="container h-100">
                        <!--Grid row-->
                        <div class="row align-items-center h-100 mt-sm-3">
                            <!--Grid column-->
                            <div class="col-md-7 text-center text-lg-left pt-5 mt-5">
                                <div class="display-5 mb-0">@item.MainTitle</div>
                                <p class="mb-2 pb-0 text-white">@item.SubTitle</p>

                                <a href="@item.ButtonUrl" class="btn btn-info btn-rounded  btn-md ml-md-0">@item.ButtonText</a>

                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-5 col-sm-12 pb-5 pt-lg-5 pt-md-4">
                                <div class="img-fluid pt-lg-5 pt-md-4">

                                    <lottie-player src=@item.ImageUrl background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                </div>
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
                </div>
                <!-- Mask & flexbox options-->
            </div>
        }


    </div>
}

@if (Model?.ListOfUIProcessViewModel != null)
{
    <div class="container  z-depth-0">


        <!--Section: Content-->
        <section class="dark-grey-text">
            @foreach (var Item in Model.ListOfUIProcessViewModel.Take(1))
            {
                <div class="row pr-lg-5">
                    <div class="col-md-6 col-lg-6 d-flex align-items-center">
                        <div>

                            <div class="ContentBackAnimation">
                                <div class="Animation">
                                    <div class="view pt-lg-5">
                                        <lottie-player src=https://assets2.lottiefiles.com/packages/lf20_6mOtyq.json background="transparent" speed="0.5" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                    </div>
                                </div>
                                <div class="MainContent text-center">
                                    <div class="font-weight-bold display-1">@Item.MainTitle</div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6 col-lg-5 offset-lg-1 mb-4">

                        

                            <div class="view pt-lg-5">
                                <lottie-player src=https://assets5.lottiefiles.com/packages/lf20_qnqidn8g.json background="transparent" speed="0.7" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>
                        

                    </div>

                </div>
            }


        </section>
        <!--Section: Content-->


    </div>
    <div class="mainUIStepsBackground container">
        <div class="container">


            <!--Section: Content-->
            <section class="dark-grey-text">
                @foreach (var SubItem in Model.ListOfUIProcessViewModel)
                {
                    <div class="row pr-lg-5">
                        <div class="col-md-4 col-sm-6 d-flex align-content-center mb-4">

                            <div class="view mx-4 px-4 mt-3">
                                <img src=@SubItem.ImageUrl class="img-fluid" alt="smaple image">
                            </div>

                        </div>
                        <div class="col-md-7 d-flex align-items-center">
                            <div>

                                <h3 class="font-weight-bold mb-4 light-blue-text">@SubItem.SubTitle</h3>

                                <p class="text-muted text-justify">@SubItem.Content</p>



                            </div>
                        </div>
                    </div>
                }


            </section>
            <!--Section: Content-->


        </div>
    </div>

}

@if (Model?.ListUIMatterViewModel != null)
{
    <div class="UIMatterBackground">
        <div class="container z-depth-0">


            <!--Section: Content-->
            <section class=" pt-lg-5 pt-md-5">

                <div class="row pr-lg-5 pt-lg-5 pt-md-5">
                    @foreach (var UIMatter in Model.ListUIMatterViewModel.Take(1))
                    {
                        <div class="col-md-6 col-lg-7 mb-4 mb-sm-0">

                            <div class="img-fluid">
                                <lottie-player src=@UIMatter.ImageUrl background="transparent" speed="0.7" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>

                        </div>
                        <div class="col-md-6 col-lg-5 d-flex align-items-center">
                            <div>

                                <h2 class="font-weight-bold text-white mb-4">@UIMatter.MainTitle</h2>

                                <p class="text-justify text-white">@UIMatter.Content</p>

                            </div>
                        </div>
                    }

                </div>

            </section>
            <!--Section: Content-->


        </div>
    </div>
}

@if (Model?.ListUIStepsViewModel != null)
{
    <div class="UIUXStepsBack">
        @foreach (var item in Model.ListUIStepsViewModel.Take(1))
        {
            <div class="container mt-n5 mb-n5">


                <!--Section: Content-->
                <div class=" mt-n5 mb-n5">

                    <div class="row pr-lg-5 mt-n5">
                        <div class="col-md-6">

                            <div class="view">
                                <lottie-player src=@item.ImageUrl background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>

                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            <div>

                                <h4 class="font-weight-bold light-blue-text mb-4">@item.MainTitle</h4>

                                <p class="text-justify text-muted">@item.Content</p>



                            </div>
                        </div>
                    </div>

                </div>
                <!--Section: Content-->


            </div>
        }
        
    </div>
    
}




@section UIUXCustomCSS{
    @Styles.Render("~/Content/UIUXCustomCSS.css")
}