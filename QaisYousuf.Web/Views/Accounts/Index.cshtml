
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Authorization.cshtml";
}

@{
    if (User.Identity.IsAuthenticated)
    {
        <p>@((User as CustomPrincipal).Id)</p>
        <p>@((User as CustomPrincipal).UserName)</p>
        <p>@((User as CustomPrincipal).Email)</p>

        if(User.IsInRole("Supper Admin"))
        {
            <a href="#">Admin is Working</a>

        }
        else
        {
            <a href="#">Not Admin</a>
        }

        <ul>
            @foreach (var role in (User as CustomPrincipal).Roles)
            {
                <li class="text-danger">@role</li>
            }
        </ul>
    }
}

