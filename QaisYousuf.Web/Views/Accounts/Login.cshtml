@model QaisYousuf.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Authorization.cshtml";
}
<div class="LoginMainBackground">

    <div class="container">
        <div class="row">
            <div class="col-lg-5 offset-lg-1">
                <div class="card card-cascade narrower mx-lg-4">

                    <!-- Card image -->
                    <div class="view view-cascade gradient-card-header blue-gradient">

                        <!-- Title -->
                        <h2 class="card-header-title">Authorization</h2>
                        <!-- Subtitle -->
                      

                        <!-- Facebook -->
                        <a href="https://www.linkedin.com/in/qais-yousuf-75261b125/" target="_blank" type="button" class="btn-floating"><i class="fab fa-linkedin-in"></i></a>
                        <!-- Twitter -->
                        <a href="https://github.com/Qaisyousuf" target="_blank" type="button" class="btn-floating"><i class="fab fa-github"></i></a>
                        <!-- Google + -->
                        <a href="https://stackoverflow.com/users/9307351/qais-yousuf" target="_blank" type="button" class="btn-floating"><i class="fab fa-stack-overflow"></i></a>

                    </div>

                    <!-- Card content -->
                    <div class="card-body card-body-cascade bg-transparent d-inline-flex justify-content-center ">

                        <!-- Text -->
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="justify-content-center ">

                                <div class="form-group justify-content-center">
                                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-lg-5" })
                                    <div class="col-lg-12">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-lg-5" })
                                    <div class="col-lg-12">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <button type="submit" value="Sign In" class="btn btn-primary btn-rounded btn-md"><i class="fas fa-key pr-1"></i>Log In</button>|
                                        <a href="/Authentication" value="Register" class="btn btn-primary btn-rounded btn-md"><i class="fas fa-lock-open pr-1"></i> Sign Up</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>





            </div>
            <div class="col-lg-6">
                <div class="img-fluid">
                    <lottie-player src=https://assets8.lottiefiles.com/packages/lf20_dv3etasb.json background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                </div>
            </div>
        </div>
     
    </div>
    
    

 
</div>



@section AccountCustomCSS
{
    @Styles.Render("~/Content/AccountCustomCSS.css")
}
