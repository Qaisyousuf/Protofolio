@model QaisYousuf.ViewModels.SubscriberEmailViewModel

@{
    ViewBag.Title = "Create";
    Layout = null;
}

@if(TempData["Success"] !=null)
{
    <p class="alert alert-primary">@TempData["Success"]</p>
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group ml-0 mr-0 pl-0 pr-0">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-lg-10", placeholder = "Your email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-12">
               
                <button class="btn btn-primary btn-rounded" type="submit" value=" Create"><i class="far fa-bell"></i> Subscribe</button>
            </div>
        </div>
    </div>
}


