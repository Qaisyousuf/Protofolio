                            </div>

                            <!-- Card content -->
                            <div class="card-body mx-5 card-body-cascade  text-left mx-3">

                                @foreach (var subItem in Model.ListUIUXToolsViewModel)
                                {
                                    <ul>
                                        <li>
                                            <h6 class="mt-2"><img src="@subItem.IconUrl" style="height:30px; width:30px; margin-right:10px;" />@subItem.ProgramTitle</h6>
                                        </li>
                                    </ul>
                                }
