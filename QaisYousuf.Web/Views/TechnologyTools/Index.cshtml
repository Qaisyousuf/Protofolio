        <div class="display-4 text-center">Our Tools and Technologies</div>
        <div class=" container my-lg-5 z-depth-0">


            <!--Section: Content-->
            <section class="dark-grey-text">

                <div class="row pr-lg-5 pt-lg-4 ">
                    <div class="col-md-6 col-lg-5 offset-lg-1">
                        @foreach (var LottiImage in Model.ListOfWebProgramming.Take(1))
                        {
