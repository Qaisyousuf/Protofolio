@model QaisYousuf.ViewModels.ListOfCodePages
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Technology.cshtml";
}
@if (Model?.ListOfCodeBannerViewModel != null)
{
<div class="MainCodeBackground">
    <div class="h-100">


        @foreach (var item in Model.ListOfCodeBannerViewModel.Take(1))
        {
            <div class="bg-transparent">
                <!-- Mask & flexbox options-->
                <div class="mask">
                    <!-- Content -->
                    <div class="container h-100">
                        <!--Grid row-->
                        <div class="row align-items-center h-100 pt-lg-5 pt-md-5">
                            <!--Grid column-->
                            <div class="col-md-6 col-lg-7 text-center text-lg-left pt-3 ">
                                <div class="display-5 mb-0">@item.MainTitle</div>
                                <p class="mb-2 pb-0 text-white text-justify">@item.SubTitle</p>

                                <a href="@item.ButtonUrl" class="btn btn-info btn-rounded  btn-md ml-md-0">@item.ButtonText</a>

                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6 col-lg-5 col-sm-12">
                                <div class="img-fluid">
                                    <lottie-player src=@item.ImageUrl background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                </div>
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
                </div>
                <!-- Mask & flexbox options-->
            </div>
        }
    </div>
</div>
 
}

