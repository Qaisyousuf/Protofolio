                            </div>
                        }

                    </div>

                    <div class="col-md-6 col-lg-4 offset-lg-1 mb-4">

                        <div class="pricing-card card card-cascade narrower">

                            <!-- Card image -->
                            <div class="view view-cascade gradient-card-header  blue lighten-1">

                                @foreach (var item in Model.ListOfWebProgramming.Take(1))
                                {
                                    <h4 class=" card-header-title">@item.MainTitle</h4>
                                }
                                <!-- Title -->
                                <!-- Subtitle -->
