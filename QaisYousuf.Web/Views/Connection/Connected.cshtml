@model QaisYousuf.ViewModels.ContactFormViewModel
@{
    ViewBag.Title = "Connected";
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
}
@if (TempData["Message"] != null)
{
    <div class="my-5">
        <div class="">
            <!-- Mask & flexbox options-->
            <div class="mask">
                <!-- Content -->
                <div class="container h-100">
                    <!--Grid row-->
                    <div class="row align-items-center h-100">
                        <!--Grid column-->
                        <div class="col-md-6 col-lg-6">
                            <h4 class="mb-4 light-blue-text font-weight-bold"> Thanks, <span class="font-weight-bold text-warning">@TempData["Message"]</span> for reaching out!</h4>

                            <p class="mb-4 pb-2 dark-grey-text">
                                <span class="font-weight-bold light-blue-text"> Hi, @TempData["Message"]<br /></span>

                                Welcome to UI to Code, we are so excited to have you join us. We're feeling pretty lucky that you chose us,If you have any further questions or concerns, let us know. We are here 24/7 and always happy to help.
                            </p>
                            <a href="/Home" type="button" class="btn btn-primary btn-rounded btn-md ml-md-0">Home</a>
                            <a href="/ContactUs" type="button" class="btn btn-primary btn-rounded btn-md">Contact</a>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->

                        <div class="col-md-6 col-lg-5 offset-lg-1">
                            <div class="img-fluid">
                                <lottie-player src=https://assets10.lottiefiles.com/packages/lf20_gMQp3a.json background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
                </div>
                <!-- Mask & flexbox options-->
            </div>
        </div>
    </div>
}

@section ContactCustomCSS{
    @Styles.Render("~/Content/ContactCustomCSS.css")
}