@model QaisYousuf.ViewModels.ListOfContact


@if (Model?.ListContactBannerViewmodel != null)
{

<div class="ContactBackground mt-n5">

    @foreach (var item in Model.ListContactBannerViewmodel.Take(1))
    {
        <div class="bg-transparent mt-5">
            <!-- Mask & flexbox options-->
            <div class="mask">
                <!-- Content -->
                <div class="container h-100 my-3 py-3 ">
                    <!--Grid row-->
                    <div class="row align-items-center h-100 mt-sm-3">
                        <!--Grid column-->
                        <div class="col-md-7 text-center text-lg-left pt-5 mt-5">
                            <div class="display-4 mb-0">@item.MainTitle</div>
                            <p class="mb-2 pb-0 dark-grey-text">@item.SubTitle</p>

                            <a href="@item.ButtonUrl" class="btn btn-primary btn-rounded  btn-md ml-md-0">@item.ButtonText</a>

                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-5 col-sm-12 pb-5 mb-md-5 pb-md-5">
                            <div class="img-fluid mt-sm-5 py-sm-5 " id="ContactBannerVedio">
                                <lottie-player src=@item.ImageUrl background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </div>
    }
</div>

}


@section ContactCustomCSS{
    @Styles.Render("~/Content/ContactCustomCSS.css")
}