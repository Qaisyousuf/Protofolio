@model QaisYousuf.ViewModels.ListOfContact
@{

    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
}
@if (Model?.ListContactBannerViewmodel != null)
{

    <div class="aboutbackground mt-n5">



        @foreach (var item in Model.ListContactBannerViewmodel.Take(1))
        {
            <div class="bg-transparent mt-5 pt-5">
                <!-- Mask & flexbox options-->
                <div class="mask">
                    <!-- Content -->
                    <div class="container mt-5 pt-4">
                        <!--Grid row-->
                        <div class="row align-items-center h-100 ">
                            <!--Grid column-->
                            <div class="col-md-7 text-center text-lg-left pt-5 mt-3">
                                <div class="display-4 mb-0">@item.MainTitle</div>
                                <p class="mb-2 pb-0 dark-grey-text">@item.SubTitle</p>

                                <a href="@item.ButtonUrl" class="btn btn-primary  btn-md ml-md-0">@item.ButtonText</a>

                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-5 col-sm-12 pb-5 mt-2 pt-2 ">
                                <div class="img-fluid mt-sm-5 " id="aboutBannerVedio">
                                    <lottie-player src=@item.ImageUrl background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                </div>
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
                </div>
                <!-- Mask & flexbox options-->
            </div>
        }
    </div>

}

