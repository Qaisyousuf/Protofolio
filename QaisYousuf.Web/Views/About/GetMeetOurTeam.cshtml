@model QaisYousuf.ViewModels.ListOfAboutPage
@{
    ViewBag.Title = ViewBag.PageTitle;
    
}

@if (Model?.MeetoutTeamListViewmodel != null)
{
<div class="TeamMainBackground">

    <header>

        <!-- Full Page Intro -->
        <div class="">
            <!-- Mask & flexbox options-->
            <div class="mask">
                <!-- Content -->
                <div class="container h-100 pt-5">
                    <!--Grid row-->
                    <div class="row align-items-center h-100">
                        <!--Grid column-->
                        <div class="col-md-6 text-center">
                            @foreach (var item in Model.MeetoutTeamListViewmodel.Take(1))
                            {
                                <div class="display-4">@item.MainTitle</div>
                            }


                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="img-fluid">
                                <lottie-player src=https://assets6.lottiefiles.com/packages/lf20_ca8zbrdk.json background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                            </div>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </div>
        <!-- Full Page Intro -->

    </header>
    <!-- Main navigation -->
</div>

<div class="container my-5 pt-5">


    <!--Section: Content-->
    <section class="text-center dark-grey-text">

        <!-- Section heading -->
       

        <!-- Grid row -->
        <div class="row">

            <!-- Grid column -->
            @foreach (var SubItem in Model.MeetoutTeamListViewmodel)
            {

                <div class="col-lg-4 col-md-12 mb-4">

                    <!-- Rotating card -->
                    <div class="card-wrapper">
                        <div id="card-1" class="card card-rotating text-center">
                            <!-- Front Side -->
                            <div class="face front">
                                <!-- Image -->
                                <div class="card-up">
                                    <img class="card-img-top" src="@SubItem.ProfileImageUrl" alt="Team member card image">
                                </div>
                                <!-- Avatar -->
                                <div class="avatar mx-auto white">
                                    <img src="@SubItem.ImageUrl" class="rounded-circle img-fluid"
                                         alt="First sample avatar image">
                                </div>
                                <!-- Content -->
                                <div class="card-body">
                                    <h3 class="font-weight-bold light-blue-text mt-1 mb-3">@SubItem.Name</h3>
                                    <p class="font-weight-normal dark-grey-text">@SubItem.Position</p>
                                    <!-- Triggering button -->
                                    <hr>
                                    <a class="rotate-btn light-blue-text pb-5" data-card="card-1">
                                        <i class="fas fa-redo-alt grey-text"></i> Read more
                                    </a>
                                </div>
                            </div>
                            <!-- Front Side -->
                            <!-- Back Side -->
                            <div class="face back">
                                <!-- Content -->
                                <div class="card-body">
                                    <!-- Content -->
                                    <h4 class="font-weight-bold mt-4 mb-2">
                                        <strong>About @SubItem.Name</strong>
                                    </h4>
                                    <hr>
                                    <p class="text-justify">
                                       @SubItem.Content
                                    </p>
                                    <hr>
                                    <!-- Social Icons -->
                                    <ul class="list-inline list-unstyled">
                                        <li class="list-inline-item">
                                            <a class="p-2 fa-lg fb-ic">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="p-2 fa-lg pin-ic">
                                                <i class="fab fa-pinterest"> </i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="p-2 fa-lg ins-ic">
                                                <i class="fab fa-instagram"> </i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a class="p-2 fa-lg tw-ic">
                                                <i class="fab fa-twitter"> </i>
                                            </a>
                                        </li>
                                    </ul>
                                    <!-- Triggering button -->
                                    <a class="rotate-btn grey-text" data-card="card-1">
                                        <i class="fas fa-redo-alt grey-text"></i> Click here to rotate back
                                    </a>
                                </div>
                            </div>
                            <!-- Back Side -->
                        </div>
                    </div>
                    <!-- Rotating card -->

                </div>

            }

        </div>
        <!-- Grid row -->

    </section>
    <!--Section: Content-->


</div>
}





@section AboutCustomCSS{

    <link href="~/Content/slick.css" rel="stylesheet" />
    <link href="~/Content/slick-theme.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/slick.min.js"></script>
    <script>
        $('.slider').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 2000,
        });
    </script>


}