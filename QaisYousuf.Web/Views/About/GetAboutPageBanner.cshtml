@model QaisYousuf.ViewModels.ListOfAboutPage

@{
              

                ViewBag.Title = ViewBag.PageTitle;
}

@if (Model?.AboutBanner != null)
{
  
    <div class="aboutbackground">

        @foreach (var item in Model.AboutBanner.Take(1))
        {
            <div class="bg-transparent">
                <!-- Mask & flexbox options-->
                
                    <!-- Content -->
                    <div class="container h-100 pt-5">
                        <!--Grid row-->
                        <div class="row align-items-center pt-5">
                            <!--Grid column-->
                            <div class="col-lg-6 col-md-12 col-sm-12  offset-lg-1 text-center text-lg-left p-md-5 pt-sm-5">

                                <div class="display-5 mb-0">@item.MainTitle</div>
                                <p class="mb-2 pb-0 text-white text-justify">@item.SubTitle</p>

                                <a href="@item.ButtonUrl" class="btn btn-info btn-rounded  btn-md ml-md-0">@item.ButtonText</a>
                               

                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-lg-5 col-md-12  col-sm-12">
                                <div class="img-fluid">
                                    <lottie-player src=@item.ImageUrl background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                </div>


                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
               
                <!-- Mask & flexbox options-->
            </div>
        }
    </div>

}



