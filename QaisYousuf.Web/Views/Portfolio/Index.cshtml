@model QaisYousuf.ViewModels.ListPortfolio
@{
    ViewBag.Title = "Portfolio";
    Layout = "~/Views/Shared/_PortfolioLayout.cshtml";
}

@if (Model?.ListPortfolioViewModle != null)
{
    <div class="PortfolioMainBack">

