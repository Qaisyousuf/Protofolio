                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </div>
        <!-- Full Page Intro -->

    </div>
    <!-- Main navigation -->

}
@if (Model?.ListPortfolioAboutViewModel != null)
{
    <div class="MainAboutMeBackground">

        <div class="container mt-4">


            <!--Section: Content-->
            <section class="dark-grey-text">

                <div class="row pr-lg-5">
                    @foreach (var item in Model.ListPortfolioAboutViewModel)
                    {
                        <div class="col-md-6 mb-4">

                            <div class="img-fluid mt-4">
                                <lottie-player src=@item.ImageUrl background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                <div class="d-flex justify-content-center">
                                    <!-- Facebook -->
                                    <a class="btn-floating btn-sm btn-li" type="button" role="button"><i class="fab fa-linkedin-in"></i></a>
                                    <a class="btn-floating btn-sm btn-ins" type="button" role="button"><i class="fab fa-instagram"></i></a>
                                    <a class="btn-floating btn-sm btn-so" type="button" role="button"><i class="fab fa-stack-overflow"></i></a>
                                    <a class="btn-floating btn-sm btn-git" type="button" role="button"><i class="fab fa-github"></i></a>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            <div>

                                <div class="font-weight-bold mb-4 display-3">@item.MainTitle</div>

                                <p class="text-justify">@item.Content</p>

                                <a href="@item.ButtonUrl" class="btn btn-primary btn-rounded">@item.ButtonText</a>

                            </div>
                        </div>
                    }


                </div>

            </section>
            <!--Section: Content-->


        </div>
    </div>

}

