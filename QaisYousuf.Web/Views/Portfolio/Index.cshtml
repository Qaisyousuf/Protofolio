                                <div class="PortofilioContentBackground">
                                    <div class="animationBackgroud">
                                        <div class="view pt-5">
                                            <lottie-player src=https://assets3.lottiefiles.com/packages/lf20_6mOtyq.json background="transparent" speed="0.5" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                        </div>
                                    </div>
                                    <div class="ContentBack">
                                        <div class="mb-4 display-3 font-weight-bold">@item.Title</div>
                                        <h4 class="cyan-text">@item.SubTitle</h4>
                                    </div>

                                </div>


                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6">
                                <div class="">
                                    <lottie-player src=@item.BackgroundImage background="transparent" speed="1" style="width: auto; height: auto;" loop autoplay></lottie-player>
                                </div>
                            </div>
